{{#each blogs as |blog|}}
  <div
    class="container position-absolute top-50 start-50 translate-middle border border-2 rounded-3 bg-light">
    <div class="bg-dark m-4 border border-2 rounded-3 ">
      <h2>
        <a
          class=" link-light text-decoration-none m-3"
          href="/blog/{{blog.id}}">{{blog.title}}</a>
      </h2>
    </div>
    <div class="border m-4 border-2 text-dark rounded-3">
      <p class="m-3">
        {{blog.description}}
      </p>
    </div>
  </div>
{{/each}}