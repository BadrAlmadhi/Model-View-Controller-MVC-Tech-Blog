{{#each blogs as |blog|}}
  <div
    class="container position-absolute top-50 start-50 translate-middle border border-3 bg-secondary">
    <div class="bg-dark m-4 border border-2">
      <h2>
        <a
          class=" link-light text-decoration-none"
          href="/blog/{{blog.id}}"
        >{{blog.title}}</a>
      </h2>
    </div>
    <div class="border m-4 border-2 text-light">
      <p>
        {{blog.description}}
      </p>
    </div>
  </div>
{{/each}}